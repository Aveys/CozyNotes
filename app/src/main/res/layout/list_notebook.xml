<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/list_notebook_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du Notebook"/>
    <TextView
        android:id="@+id/list_notebook_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_notebook_name"
        android:text="Description du notebook"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_notebook_desc"/>
</RelativeLayout>